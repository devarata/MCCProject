<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ilay1"
    android:background="@drawable/boundary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Subject"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/minrequired"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimum Requirement:" />

        <TextView

            android:id="@+id/lec2attend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Minimum lectures to attend:" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/circlelay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Attendance" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/circletext"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/circulartext"
                android:gravity="center"
                android:text="0%"
                android:textColor="#ffffffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Attended"/>
                    <TextView
                        android:id="@+id/curratt"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"/>
                    <ImageButton
                       android:layout_marginLeft="15dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        app:srcCompat="@android:drawable/ic_input_add"/>


                </LinearLayout>
                <View
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="1dp"
                    android:layout_height="65dp"
                    android:background="@android:color/darker_gray"></View>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bunked"/>
                    <TextView
                        android:id="@+id/currbunk"
                    android:gravity="center"
                        android:layout_marginRight="9dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"/>
                    <ImageButton
                        android:layout_marginRight="15dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        app:srcCompat="@android:drawable/ic_input_add"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

